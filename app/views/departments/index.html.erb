<p id="notice"><%= notice %></p>

<h1>Departments
<%= link_to 'New Department', new_department_path ,class: "btn btn-success"%>
</h1>

<table  class="table table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= link_to "#{department.name}", department_path(department) %></td>
        <td><%= department.description %></td>
        <td><%#= link_to 'Edit', edit_department_path(department) %></td>
        <td><%= link_to 'Destroy', department,class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


